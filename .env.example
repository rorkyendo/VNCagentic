# Database
DATABASE_URL=postgresql://user:password@localhost:5432/vncagentic

# API Provider Configuration
# Options: anthropic, comet, bedrock, vertex
API_PROVIDER=comet

# CometAPI Configuration (recommended - cost-effective)
COMET_API_BASE_URL=https://api.cometapi.com
ANTHROPIC_API_KEY=sk-your-cometapi-key-here

# Anthropic Direct API Configuration (alternative)
# ANTHROPIC_API_URL=https://api.anthropic.com
# ANTHROPIC_API_KEY=your-anthropic-key-here

# Model Configuration
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# VNC Configuration
VNC_PASSWORD=vncpassword
VNC_DISPLAY=:1
WIDTH=1024
HEIGHT=768

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your-super-secret-key-change-this-in-production

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Agent Configuration
MAX_SESSIONS=10
SESSION_TIMEOUT_MINUTES=60
MAX_OUTPUT_TOKENS=4096
DEFAULT_MODEL=claude-sonnet-4-20250514

# Redis (for session management)
REDIS_URL=redis://localhost:6379

# Development
DEBUG=true
LOG_LEVEL=INFO
