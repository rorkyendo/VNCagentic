# VNCagentic Environment Configuration
# Copy this file to .env and configure your values

# =============================================================================
# API CONFIGURATION (REQUIRED)
# =============================================================================

# Comet API Settings - Required for AI agent functionality
COMET_API_KEY=your_comet_api_key_here
COMET_API_BASE_URL=https://api.comet.ml
COMET_MODEL=cometapi-3-7-sonnet
COMET_MAX_TOKENS=1024

# API Provider Selection
API_PROVIDER=comet

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Settings
POSTGRES_DB=vncagentic
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Database URL for backend connection
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password_here@postgres:5432/vncagentic

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Cache Settings
REDIS_URL=redis://redis:6379/0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Backend Host Settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend Host Settings  
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000

# =============================================================================
# VNC CONFIGURATION
# =============================================================================

# VNC Display Settings
VNC_DISPLAY=:1
VNC_RESOLUTION=1024x768
VNC_PASSWORD=vncpassword

# VNC API Port
VNC_API_PORT=8090

# noVNC Web Interface Port
NOVNC_PORT=6080

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (DO NOT use in production)
DEBUG=false

# Auto-reload backend on code changes
RELOAD=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production optimizations
WORKERS=1

# Health check settings
HEALTH_CHECK_INTERVAL=30

# Container restart policy
RESTART_POLICY=unless-stopped

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
MAX_SESSION_DURATION=3600
MAX_MESSAGES_PER_SESSION=1000

# CORS Settings (for production, specify allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Anthropic Direct API Configuration (alternative)
# ANTHROPIC_API_URL=https://api.anthropic.com
# ANTHROPIC_API_KEY=your-anthropic-key-here

# Model Configuration
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# VNC Configuration
VNC_PASSWORD=vncpassword
VNC_DISPLAY=:1
WIDTH=1024
HEIGHT=768

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your-super-secret-key-change-this-in-production

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Agent Configuration
MAX_SESSIONS=10
SESSION_TIMEOUT_MINUTES=60
MAX_OUTPUT_TOKENS=4096
DEFAULT_MODEL=claude-sonnet-4-20250514

# Redis (for session management)
REDIS_URL=redis://localhost:6379

# Development
DEBUG=true
LOG_LEVEL=INFO
